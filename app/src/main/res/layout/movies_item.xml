<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/colorPrimary"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/movieCardBottom"
    app:cardElevation="@dimen/movieCardElevation"
    app:cardCornerRadius="@dimen/movieCardRadius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="@dimen/moviePosterWidth"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/poster_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/movieCardHorizontalMargin"
            android:layout_marginStart="@dimen/movieCardHorizontalMargin"
            android:layout_toEndOf="@id/imgPoster"
            android:ellipsize="end"
            android:maxLines="@integer/cardMovieTitleLines"
            android:textSize="@dimen/cardMovieTitleText"
            android:textStyle="bold"
            android:textColor="@color/cardTextPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgPoster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.20"
            tools:text="Mission Impossible" />

        <TextView
            android:id="@+id/txtGenres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitle"
            android:layout_marginEnd="@dimen/cardMovieHorizontalMargin"
            android:layout_marginStart="@dimen/cardMovieHorizontalMargin"
            android:layout_marginTop="@dimen/cardMovieGenresTop"
            android:layout_toEndOf="@id/imgPoster"
            android:ellipsize="end"
            android:maxLines="@integer/detailsGenresMaxLines"
            android:textColor="@color/cardTextPrimary"
            android:textSize="@dimen/cardMovieGenresText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgPoster"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"
            tools:text="Thriller, Action" />

        <TextView
            android:id="@+id/txtReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/cardMovieHorizontalMargin"
            android:layout_marginStart="@dimen/cardMovieHorizontalMargin"
            android:layout_toEndOf="@id/imgPoster"
            android:textColor="@color/cardTextDark"
            android:textSize="@dimen/cardMovieReleaseText"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGenres"
            app:layout_constraintVertical_bias="0.95"
            tools:text="12/08/2019" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
